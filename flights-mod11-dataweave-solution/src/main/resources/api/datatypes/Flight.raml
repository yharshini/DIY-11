#%RAML 1.0 DataType

type: object
properties:
  ID?: integer
  airline: string
  flightCode: 
    type: string
    xml:
      attribute: true
      name: "code"
  fromAirportCode: string
  toAirportCode: string
  departureDate:
    type: string
    pattern: \d{4}-\w{3}-\d{2}
  emptySeats: integer
  totalSeats?: integer
  price: number
  planeType?: string
  transactions:
    type: array
    items: !include Transaction.raml